{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
      "builder": "NIXPACKS"
    },
    "deploy": {
      "startCommand": "python manage.py migrate --run-syncdb && gunicorn backend.wsgi:application --bind 0.0.0.0:$PORT --timeout 30 --workers 1",
      "healthcheckPath": "/health/",
      "healthcheckTimeout": 30,
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 3
    }
  }